<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Logo e título -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="213dp"
        android:layout_height="132dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_piggy_bank" /> <!-- Substitua pelo seu logo -->

    <TextView
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Poupança Fácil"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/subtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Calcule seus investimentos"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="20dp" />

    <!-- Campo de Valor Inicial -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor Inicial:"
        android:textSize="18sp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/valorInicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor em R$. Ex: 1700.00"
        android:inputType="numberDecimal" />

    <!-- Campo de Aplicação Mensal -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplicação mensal:"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/aplicacaoMensal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ex: 100.00"
        android:inputType="numberDecimal" />

    <!-- Campo de Tempo da Aplicação -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tempo da aplicação"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/tempoAplicacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Em meses"
        android:inputType="number" />

    <!-- Campo de Taxa -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taxa"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/taxa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ex: 0.02"
        android:inputType="numberDecimal" />

    <!-- Botão Calcular -->
    <Button
        android:id="@+id/botaoCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:layout_marginTop="20dp"
        android:backgroundTint="#1976D2"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>
